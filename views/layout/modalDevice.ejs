<style>
    /* Modal container */
    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        /* Semi-transparent background */
        z-index: 9999;
        /* Ensure modal is above other elements */
        overflow: auto;
        /* Enable scrolling if content overflows */
    }

    /* Modal content */
    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        /* Center modal vertically and horizontally */
        padding: 20px;
        border: 1px solid #888;
        border-radius: 5px;
        width: 80%;
        /* Set modal width */
        max-width: 600px;
        /* Max width for larger screens */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        /* Add shadow */
    }

    /* Close button */
    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
        cursor: pointer;
    }

    /* Close button on hover */
    .close:hover,
    .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }

    /* Modal body padding to prevent content from sticking to edges */
    .modal-body {
        padding: 10px;
    }

    /* Show the modal when the hash matches the modal ID */
    .modal:target {
        display: block;
    }
</style>

<div id="myModal" class="modal">
    <!-- Modal content -->
    <div class="modal-content">
        <!-- Close button -->
        <span class="close">&times;</span>
        <!-- Modal body -->
        <div class="modal-body">
            <h2>This is a modal</h2>
            <p>This is some text within the modal.</p>
        </div>
    </div>
</div>
<script>
    var closeBtn = document.querySelector('.close');
    var openModalLink = document.querySelectorAll('.openModal');

    console.log(openModalLink);

    closeBtn.addEventListener('click', function () {
        var modal = closeBtn.parentElement.parentElement;
        modal.style.display = 'none';
    });


    openModalLink.addEventListener('click', function () {
        var modal = document.getElementById('myModal');
        modal.style.display = 'block';
    });
</script>